<script>
let packages = 0;
let items = 0;
let events = [];

let shiftStartTime = null;
let shiftTimer = null;
let exceptionStart = null;
let currentException = null;

let hourlyItems = [];
let hourlyLabels = [];

// SHIFT CONTROLS
document.getElementById("startShiftBtn").onclick = () => {
    if(shiftStartTime) return;
    shiftStartTime = Date.now();
    events.push({time: shiftStartTime, type:"SHIFT_START"});
    shiftTimer = setInterval(updateDisplay, 1000);
};
document.getElementById("stopShiftBtn").onclick = () => {
    if(!shiftStartTime) return;
    clearInterval(shiftTimer);
    events.push({time: Date.now(), type:"SHIFT_STOP"});
    shiftStartTime = null;
    updateDisplay();
};

// COUNTERS
function addPackage(){
    if(!shiftStartTime) return alert("Start shift first.");
    let perPackage = parseInt(document.getElementById("itemsPerPackage").value);
    if(!perPackage || perPackage<1) perPackage=1;
    packages++;
    items += perPackage;
    events.push({time: Date.now(), type:"PACKAGE", details:perPackage});
    document.getElementById("packages").innerText = packages;
    document.getElementById("items").innerText = items;
    updateUPH();
}

function addItems(){
    if(!shiftStartTime) return alert("Start shift first.");
    let count = parseInt(document.getElementById("itemCount").value);
    if(!count || count<1) return alert("Enter a positive number.");
    items += count;
    events.push({time: Date.now(), type:"ITEMS", details:count});
    document.getElementById("items").innerText = items;
    updateUPH();
}

// EXCEPTIONS
function startException(name){
    if(exceptionStart) return;
    exceptionStart = Date.now();
    currentException = name;
    events.push({time: exceptionStart, type:"EX_START", details:name});
    document.getElementById("exceptionStatus").innerText = "Exception: " + name;
}
function stopException(){
    if(!exceptionStart) return;
    let now = Date.now();
    let dur = now - exceptionStart;
    events.push({time: now, type:"EX_END", details:JSON.stringify({name:currentException,durationMs:dur})});
    exceptionStart = null;
    currentException = null;
    document.getElementById("exceptionStatus").innerText = "Exception: None";
}

// THEME
function setTheme(t){ document.body.className=t; localStorage.setItem("uphTheme",t); }
let savedTheme = localStorage.getItem("uphTheme"); if(savedTheme) document.body.className=savedTheme;

// TIMER DISPLAY
function getEffectiveMs(now=new Date()){
    if(!shiftStartTime) return 0;
    let total = now - shiftStartTime;
    events.forEach(e=>{ if(e.type==="EX_END"){ try{ let d=JSON.parse(e.details); total-=d.durationMs; }catch{} } });
    if(exceptionStart) total-=(now-exceptionStart);
    return total;
}

function updateDisplay(){
    let now=new Date();
    let eff=getEffectiveMs(now);
    let sec=Math.floor(eff/1000);
    let h=Math.floor(sec/3600);
    let m=Math.floor((sec%3600)/60);
    let s=
